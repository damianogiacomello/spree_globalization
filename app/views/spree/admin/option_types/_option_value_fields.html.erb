<script type="text/javascript">
$(function() {
	$(".tabs_ov").tabs();
});
</script>
<tr class="option_value fields" id="<%= dom_id(f.object) %>"  data-hook="option_value">
<% if(Spree::OptionValue::LANG.blank?) %>
	<td class="name"><%= f.text_field :name %></td>
	<td class="presentation"><%= f.text_field :presentation %></td>
<% else %>
	<td colspan="2">
		<div class="tabs_ov">
			<ul>
				<%- Spree::OptionValue::LANG.each do |locale| %>
				<li><%= link_to "#{locale.to_s.titleize}", "#tab_ot_#{locale.to_s}"%></li>
				<%- end -%>
			</ul>
			<%- Spree::OptionValue::LANG.each do |locale| %>
			<div id="tab_ot_<%= locale.to_s %>">
				<% fieldsym = "name_#{locale}".to_sym %>
				<p class="name" style="float: left; clear: none;"><%= t(fieldsym) %> <%= f.text_field fieldsym %></p>
				<% fieldsym = "presentation_#{locale}".to_sym %>
				<p class="presentation" style="float: left; margin: 0px 20px; clear: none;"><%= t(fieldsym) %> <%= f.text_field fieldsym %></p>
			</div>
			<% end %>
		</div>
	</td>
<% end %>
	<td class="actions"><%= link_to_remove_fields t(:remove), f %></td>
</tr>
